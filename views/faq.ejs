    <script>
        const voicerec = window.SpeechRecognition || window.webkitSpeechRecognition;
        const speech = new SpeechSynthesisUtterance();
        speech.volume=1;
        speech.rate=1;
        speech.pitch=1;
        var answer;
        var element;
        var pre="h";
        var flag=0;
        var voices = window.speechSynthesis.getVoices();
        speech.voice = voices[1];
        function speakfaq(x) 
        {
          window.speechSynthesis.cancel();
          element=document.getElementById(pre+x);  
          if(flag!=pre+x)
            {
              answer=element.textContent;
              speech.text=answer;
              window.speechSynthesis.speak(speech);
              answer=document.getElementById(x).textContent;
              speech.text=answer;
              window.speechSynthesis.speak(speech);
              flag=pre+x;
            }
            else
            {
              flag="";
              window.speechSynthesis.cancel();
            }
            

        }
        
    </script>
