<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/inventory.css">
    <title>YODHA - Inventory</title>
</head>
<body>
    <header>
        <nav>
            <a href="/" id="logo">YODHA</a>
            <ul>
                <li><a href="/#cards">Services</a></li>
                <li><a href="#footer">About us</a></li>
                <% if(type === 'gp'){ %>
                    <li><a href="#"><%= name %> - General</a></li>
                  <% }else if(type === 'hw') {%>
                    <li><a href="#"><%= name %> - Health Worker</a></li>
                  <% }else if(type === 'go') {%>
                    <li><a href="#"><%= name %> - Govt. Official</a></li>
                  <%} else if(type === 'ad') {%>
                    <li><a href="#"><%= name %> - ADMIN</a></li>
                  <%}else {%>
                    <li><a href="#"><%= name %></a></li>
                  <%}%>
                 <li><a href="/auth/logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    <section id="inventory">
        <% if(success.length > 0) { %>
            <div style="background-color: #0dc90d; border: 1px solid #fcc2c3; padding: 20px 30px; margin: auto;">
                <span style="text-align: center; color: #ffffff; font-family: Helvetica, Arial, sans-serif; font-size: 13px; font-weight: bold; line-height: 20px; text-shadow: 1px 1px rgba(250,250,250,.3);">
                    <%= success %>
                </span>
            </div>
        <% } %>
        <div class="card-deck">
            <div class="card-deck">
                <div class="card">
                  <a href="#form1" class="card-link" onclick=free()>
                  <img src="/images/kit1.jpg" class="card-img-top" alt="free kit">
                  <div class="card-body">
                    <h5 class="card-title">Free Kit </h5>
                    <p class="card-text">Free</p>
                    <span>Request now</span>
                  </div>
                  </a> 
                </div>
                <div class="card">
                  <a href="#form2" class="card-link" onclick=paid()>
                   <img src="/images/kit2.jpg" class="card-img-top" alt="paid kit">
                   <div class="card-body">
                    <h5 class="card-title">Paid kit</h5>
                    <p class="card-text">Rs. 500</p>
                    <span>Buy now</span>
                   </div>
                  </a>
                </div>
              </div>
        <div id="forms">
        <form action="/inventory" method="post" id="form1">
            <div id="info">
                <h1>Request free kit</h1>
            </div>
            <div class="input">
                <label class="label-for-input">
                    <span>Name:</span>
                    <input type="text" name="name" required placeholder="Your name">
                </label>
            </div>
            <!-- <div class="input">
                <label class="label-for-input">
                    <span>E-mail:</span>
                    <input type="email" name="email" required placeholder="Your email">
                </label>
            </div> -->
            <div class="input">
                <label class="label-for-input">
                    <span>Phone:</span>
                    <input type="tel" name="phone" required placeholder="Your Phone no">
                </label>
            </div>
            <div class="input">
                <label class="label-for-input">
                    <span>Address:</span>
                    <input type="text" name="address" required placeholder="Your address">
                </label>
            </div>
            <div class="input">
                <label class="label-for-input">
                    <span>Pin/Zip Code:</span>
                    <input type="text" name="pin" required placeholder="Your Pin/Zip Code">
                </label>
            </div>
            <div id="submit">
                <input type="submit" value="Request Now">
            </div>
        </form>
        <form action="/inventory" method="post" id="form2">
            <div id="info">
                <h1>Buy paid kit</h1>
            </div>
            <div class="input">
                <label class="label-for-input">
                    <span>Name:</span>
                    <input type="text" name="name" required placeholder="Your name">
                </label>
            </div>
            <!-- <div class="input">
                <label class="label-for-input">
                    <span>E-mail:</span>
                    <input type="email" name="email" required placeholder="Your email">
                </label>
            </div> -->
            <div class="input">
                <label class="label-for-input">
                    <span>Phone:</span>
                    <input type="tel" name="phone" required placeholder="Your Phone no">
                </label>
            </div>
            <div class="input">
                <label class="label-for-input">
                    <span>Address:</span>
                    <input type="text" name="address" required placeholder="Your address">
                </label>
            </div>
            <div class="input">
                <label class="label-for-input">
                    <span>Pin/Zip Code:</span>
                    <input type="text" name="pin" required placeholder="Your Pin/Zip Code">
                </label>
            </div>
            <!-- <div class="input"> -->
                <!-- <label class="label-for-input">
                    <span>Payment Method:</span><br>
                    <label for="online">Online</label>
                    <input type="radio" id="online" name="payment_method" required value="Online">
                    <label for="cod">Cash on Delivery</label>
                    <input type="radio" id="cod" name="payment_method" required value="Cash on Delivery">
                    
                </label> -->
            <!-- </div> -->
            <div class="input">
                <div class="input">
                    <label class="label-for-input" id="qr">
                        <span >UPI QR:</span>
                        <img src="/images/QR.jpg" alt="qr code">
                    </label>
                </div>
                <div>
                    <label class="label-for-input">
                    <span>UPI ref:</span>
                    <input type="text" name="upiref" required placeholder="UPI refernce no">
                </label>
            </div>
            <div id="submit">
                <input type="submit" value="Buy Now">
            </div>
        </form>
    </div>
    </section>
    <footer id="footer">
        <section>
            <div>
              <h1>
                  About us
              </h1>
                <p>
                    Yodha is a website designed by <br>a group of students to help tackel <br>the problems related to Covid-19. <br> It ia one stop place for Covid-19.
                </p>
            </div>
            <div>
              <h1>
                  Useful links
              </h1>
              <p>> <a href="#">Services</a><br>> <a href="#">About us</a><br>> <a href="#">Help</a></p>
          </div>
            <div>
                <h1>
                    Contact us
                </h1>
                <p>+91 1122334455<br>+91 6677889900<br>contact@yodha.com</p>
            </div>
    
        </section>
        <p id="copy">&copy; Yodha 2021</p>
    </footer>
    <script>
        var f1=document.getElementById("form1");
        var f2=document.getElementById("form2");
        var fb=document.getElementById("forms");
        f2.style.display="none";
        var i;
        function free() {
            for(i=0;i<f2.length;i++)
             f2[i].disabled=true;
            for(i=0;i<f1.length;i++)
             f1[i].disabled=false;
             f2.style.display="none";
             f1.style.display="block";
             fb.style.height="430px";
        }
        function paid() {
            for(i=0;i<f1.length;i++)
             f1[i].disabled=true;
            for(i=0;i<f2.length;i++)
             f2[i].disabled=false;
             f2.style.display="block";
             f1.style.display="none";
             fb.style.height="560px";
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/174b65465c.js" crossorigin="anonymous"></script>
</body>
</html>